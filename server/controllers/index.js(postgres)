const { Client } = require('pg');
const bcrypt = require('bycrypt');

const client = new Client({ database: 'bookconnection' });
client.connect();

const selectBooks = (callback) => {
  client.query('SELECT * FROM books LIMIT 10', (err, results) => {
    if (err) {
      callback(err, null);
    } else {
      callback(null, results);
    }
  });
};

